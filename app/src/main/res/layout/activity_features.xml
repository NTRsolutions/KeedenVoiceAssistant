<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/forest"
    android:padding="20dp"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    tools:context="com.apkglobal.alice.Features">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/image"
        android:src="@drawable/image_animate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="433dp" />


    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">

        <Button
            style="@style/buttons"
            android:background="@drawable/btn_background3"
            android:id="@+id/btn_alarm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performs Translations"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <Button
            style="@style/buttons"
            android:background="@drawable/btn_background3"
            android:id="@+id/btn_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sets Alarms"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:text="Sets Timer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:text="Tells Date"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:text="Tells time"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:text="Opens Any App"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Performs Actions Accrding to Mood"/>



        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="I can Make Calls"/>



        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Responds to Greetings"/>


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Enable/Disable Bluetooth"/>



        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Sends Email"/>



        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
                        style="@style/buttons"             android:background="@drawable/btn_background3" 
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Write Messages for Socail Media"
            android:textAllCaps="false"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
