<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context="com.apkglobal.alice.Email">


    <Button
        android:id="@+id/btn_sub"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/image_animate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="75dp" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Tap for Subject"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/tv_sub"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/btn_sub"
        android:layout_alignLeft="@+id/tv_text"
        android:layout_alignStart="@+id/tv_text" />


    <Button
        android:id="@+id/btn_text"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/image_animate"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/btn_sub"
        android:layout_alignLeft="@+id/btn_sub"
        android:layout_alignStart="@+id/btn_sub" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text"
        android:textColor="#FFFFFF"
        android:hint="Tap for Message"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColorHint="#FFFFFF"
        android:layout_alignTop="@+id/btn_text"
        android:layout_toRightOf="@+id/btn_text"
        android:layout_toEndOf="@+id/btn_text"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:text="Send Email"
        android:background="#00000000"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />



</RelativeLayout>
